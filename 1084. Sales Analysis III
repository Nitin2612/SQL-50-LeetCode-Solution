WITH FirstQuarterSales AS (
    SELECT 
        DISTINCT product_id
    FROM 
        Sales
    WHERE 
        sale_date BETWEEN '2019-01-01' AND '2019-03-31'
),
OtherSales AS (
    SELECT 
        DISTINCT product_id
    FROM 
        Sales
    WHERE 
        sale_date NOT BETWEEN '2019-01-01' AND '2019-03-31'
)
SELECT 
    p.product_id, 
    p.product_name
FROM 
    Product p
WHERE 
    p.product_id IN (SELECT product_id FROM FirstQuarterSales)
    AND p.product_id NOT IN (SELECT product_id FROM OtherSales);
